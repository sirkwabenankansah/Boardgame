pipeline {
    agent any
    
    tools {
        maven 'maven3.6.3'  // Use the Maven version configured in Jenkins
        jdk 'jdk17'         // Use Java 17 to avoid compatibility issues
    }
    
    stages {              
        stage('Compile') {
            steps {
                sh 'mvn clean compile'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        
        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
    }
}
